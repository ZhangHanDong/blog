<h1><%=h @blog.title %> users</h1>

<table>
  <tr>
    <th>User</th> 
  </tr>


<% for user in @users %>
  <tr>
    <td class="vcard"><%= link_to( h(user.name), blog_user_path(@blog, user), :class => "url fn") %> | <%= link_to( 'posts', blog_user_posts_path(@blog, user)) %> | <%= link_to( 'comments', blog_user_comments_path(@blog, user)) %></td>
  </tr>
<% end %>
</table> 

<p><%= will_paginate @users %></p>