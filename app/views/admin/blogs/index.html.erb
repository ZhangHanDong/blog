<h1>Listing Blogs</h1>

<table>
  <tr>
    <th>Title</th>
  </tr>

<% for blog in @blogs %>
  <tr>
    <td><%=h blog.title %></td>
    <td><%= link_to 'Show', admin_blog_path(blog) %></td>
    <td><%= link_to 'Edit', edit_admin_blog_path(blog) %></td>
    <td><%= link_to 'Destroy', admin_blog_path(blog), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New blog', new_admin_blog_path %>
