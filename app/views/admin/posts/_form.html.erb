<%= f.error_messages %>

<p>
  <%= f.label :title %><br />
  <%= f.text_field :title %>
</p>
<p>
  <%= f.label :publish_date %><br />
  <%= f.datetime_select :publish_date %>
</p>
<p>
  <%= f.label :summary %><br />
  <%= f.text_area :summary, :rows => 3 %>
</p>
<p>
  <%= f.label :body %><br />
  <%= f.text_area :body %>
</p> 
<p>Tags (space separate tags &amp; use quotes "" to group tag phrases)<br />
  <%= f.text_field :tag_list -%>
  <%= f.hidden_field :user_id, :value => @current_user.id unless @current_user.nil? -%>
  <%= f.hidden_field :blog_id, :value => @blog -%>
</p>
<p>
  <%= f.label :in_draft %><br />
  <%= f.check_box :in_draft %>
</p>
<p>
  <%= f.submit label %>
</p>