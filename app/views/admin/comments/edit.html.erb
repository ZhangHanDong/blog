<h1>Editing comment (for post, <strong><%= h @post.title %></strong>)</h1>  

<% form_for [:admin, @post, @comment] do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p> 
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :website %><br />
    <%= f.text_field :website %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>  
  </p>
  <p>
     <%= f.submit "Update" %>   
  </p>
<% end %>

<%= link_to 'Show', admin_post_comment_path(@post, @comment) %> |
<%= link_to 'Back', admin_post_comments_path(@post) %>